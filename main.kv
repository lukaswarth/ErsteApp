<Start>:
    FloatLayout:
        # Hintergrundbild als Image
        Image:
            source: "Bilder/Startbildschirm.png"
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {'x': 0, 'y': 0}
        
        GridLayout:
            cols: 1
            rows: 7
            Label:
                id: gruss
                text: "Willkommen im Kasino!"    
            Label:
                text: "Mit welcher Farbe würdest du gerne spielen?"
                
            Label:
                id: farbe
                text: ""
                
            Label:
                text: ""
                
            GridLayout:
                cols: 5
                rows: 1
                Button:
                    text: "Orange"
                    color: 1, 0.84, 0, 1
                    background_normal: ''
                    background_down: ''
                    background_color: 1, 0.5, 0, 1
                    on_press: 
                        root.orange()
                        app.change_color([1, 0.5, 0, 1])
                Button:
                    text: "Lila"
                    color: 1, 0.84, 0, 1
                    background_normal: ''
                    background_down: ''
                    background_color: 0.5, 0, 0.5, 1
                    on_press: 
                        root.lila()
                        app.change_color([0.5, 0, 0.5, 1])
                Button:
                    text: "Grün"
                    color: 1, 0.84, 0, 1
                    background_normal: ''
                    background_down: ''
                    background_color: 0, 0.5, 0, 1
                    on_press: 
                        root.grün()
                        app.change_color([0, 0.5, 0, 1])
                Button:
                    text: "Weiß"
                    color: 1, 0.84, 0, 1
                    background_normal: ''
                    background_down: ''
                    background_color: 1, 1, 1, 1
                    on_press: 
                        root.weiß()
                        app.change_color([1, 1, 1, 1])
                Button:
                    text: "Schwarz"
                    color: 1, 0.84, 0, 1
                    background_normal: ''
                    background_down: ''
                    background_color: 0.13, 0.13, 0.13, 1
                    on_press: 
                        root.schwarz()
                        app.change_color([0.13, 0.13, 0.13, 1])
                
            Button:
                text: "Zum Spiel"
                on_press:
                    root.manager.transition_to("Kasino")

<Kasino>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: app.background_color
            Rectangle:
                pos: self.pos
                size: self.size
                
    GridLayout:
        cols: 1
        rows: 9
        GridLayout:
            cols: 3
            rows: 1
            Label:
                id: schwer
                color: 1, 0.84, 0, 1
                text: ""
            Label:
                id: geld1
                color: 1, 0.84, 0, 1
                text: "Vermögen in $:"
            Label:
                id: geld2
                color: 1, 0.84, 0, 1
                text: "10000"
             
        Label:
            id: label1
        
        GridLayout:
            cols: 2
            rows: 2
            Label:
                id: labels1
                color: 1, 0.84, 0, 1 
                text: "Score:"
        
            Label:
                id: labels2
                color: 1, 0.84, 0, 1
                text: "0"
            
            Label:
                id: labelh1
                color: 1, 0.84, 0, 1
                text: "Highscore:"
            
            Label:
                id: labelh2
                color: 1, 0.84, 0, 1
                text: "999"

        Slider:
            id: slider
            min: 1
            max: 1000
            step: 1
            value: 500
            orientation: "horizontal"
            
        Button:
            id: button1
            text: "-"
            color: 0, 0, 0, 1
            background_normal: ''
            background_down: ''
            background_color: 1, 0.84, 0, 1
            on_press: root.button_m()
        
        Label:
            id: label2
            color: 1, 0.84, 0, 1
            text: str(slider.value)
        
        Button:
            id: button2
            text: "+"
            color: 0, 0, 0, 1
            background_normal: ''
            background_down: ''
            background_color: 1, 0.84, 0, 1
            on_press: root.button_p()
        
        Button:
            id: button3
            text: "OK"
            color: 0, 0, 0, 1
            background_normal: ''
            background_down: ''
            background_color: 1, 0.84, 0, 1
            on_press: root.button_ok()
            
        GridLayout:
            cols:2
            rows:1
            Button:
                text: "GameOne"
                background_normal: ''
                background_down: ''
                background_color: 0.13, 0.13, 0.13, 1
                color: 1, 0.84, 0, 1
                on_press: 
                    root.manager.current = "GameOne"
                    root.manager.transition.direction = "right"
            Button:
                text: "GameTwo"
                background_normal: ''
                background_down: ''
                background_color: 0.13, 0.13, 0.13, 1
                color: 1, 0.84, 0, 1
                on_press: 
                    root.manager.current = "GameTwo"
                    root.manager.transition.direction = "left"
                          
