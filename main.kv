            Label:
                text: ""
            
        GridLayout:
            cols: 3
            rows: 1
            Label:
                text: ""
            Button:
                id: cookie2
                background_color: 0, 0, 0, 0
                on_press: root.button_s1()
                Image:
                    source: "Bilder/Cookie.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    fit_mode: "contain"
                    size: root.width * 0.4, root.height * 0.4
            Label:
                text: ""
                
        GridLayout:
            cols: 3
            rows: 1
            Label:
                text: ""
            Button:
                id: cookie3
                background_color: 0, 0, 0, 0
                on_press: root.button_s1()
            Label:
                text: ""
        
        Label:
            text: ""
            
        GridLayout:
            cols:2
            rows:1
            Button:
                text: "GameThree"
                on_press: 
                    root.manager.current = "GameThree"
                    root.manager.transition.direction = "down"
            Button:
                text: "zurück"
                on_press: 
                    root.manager.current = "Kasino"
                    root.manager.transition.direction = "left"
                    
